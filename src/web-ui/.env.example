# AI Disk Cleaner Web UI Environment Variables
# Copy this file to .env and adjust values as needed

# Development
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_APP_NAME=AI Disk Cleaner
VITE_APP_VERSION=0.2.0

# Tauri
TAURI_PRIVATE_KEY_PATH=./tauri.key
TAURI_PUBLIC_KEY=./tauri.pub

# Development flags
VITE_DEV_MODE=true
VITE_DEBUG=true

# OpenAI Configuration (optional - can be set in UI)
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_OPENAI_BASE_URL=https://api.openai.com/v1

# Feature flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_TELEMETRY=false
VITE_ENABLE_CRASH_REPORTING=true

# Performance settings
VITE_MAX_FILE_SIZE=1073741824  # 1GB in bytes
VITE_DEFAULT_BATCH_SIZE=1000
VITE_VIRTUAL_SCROLL_THRESHOLD=1000