{
  "name": "ai-disk-cleaner-web-ui",
  "version": "0.2.0",
  "description": "AI Disk Cleaner - Modern Web UI with Tauri",
  "type": "module",
  "scripts": {
    "dev": "vite --port 1420",
    "dev:debug": "VITE_DEBUG=true vite --port 1420",
    "build": "tsc && vite build",
    "build:analyze": "tsc && vite build --mode analyze",
    "build:production": "tsc && vite build --mode production",
    "build:cross-platform": "npm run build:production && tauri build --target universal-apple-darwin,x86_64-pc-windows-msvc,x86_64-unknown-linux-gnu",
    "preview": "vite preview --port 1420",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:dev:debug": "RUST_LOG=debug tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:debug": "tauri build --debug",
    "tauri:build:all": "tauri build --target all",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:report": "eslint . --ext ts,tsx --format json --output-file lint-report.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:report": "prettier --check . --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:integration": "vitest run --config tests/integration/vitest.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:performance": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test",
    "validate:ci": "npm run type-check && npm run lint && npm run test:coverage",
    "clean": "rimraf dist build target coverage test-results playwright-report .nyc_output",
    "clean:deps": "rimraf node_modules package-lock.json && npm install",
    "generate:types": "node scripts/generate-types.js",
    "postinstall": "node scripts/postinstall.js",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "prepush": "npm run validate:ci",
    "start": "npm run tauri:dev",
    "develop": "concurrently \"npm run dev\" \"npm run tauri:dev\"",
    "develop:hot": "concurrently \"npm run dev:debug\" \"npm run tauri:dev:debug\"",
    "benchmark": "node scripts/benchmark.js",
    "performance:test": "node scripts/performance-test.js",
    "security:audit": "npm audit && cargo audit",
    "security:check": "npm audit --audit-level moderate && cargo audit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@tauri-apps/plugin-fs": "^2.0.0",
    "@tauri-apps/plugin-notification": "^2.0.0",
    "@tauri-apps/plugin-os": "^2.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@tanstack/react-router": "^1.45.5",
    "@tanstack/react-query": "^5.51.1",
    "@tanstack/react-virtual": "^3.8.2",
    "zustand": "^4.5.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.3.0",
    "lucide-react": "^0.400.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@hookform/resolvers": "^3.7.0",
    "react-hook-form": "^7.52.1",
    "zod": "^3.23.8",
    "date-fns": "^3.6.0",
    "recharts": "^2.12.7",
    "sonner": "^1.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "@tauri-apps/cli": "^2.0.0",
    "@tanstack/router-vite-plugin": "^1.45.6",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-import": "^2.29.1",
        "@eslint/js": "^9.7.0",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^4.0.0-alpha.15",
    "@tailwindcss/vite": "^4.0.0-alpha.15",
    "typescript": "^5.5.3",
    "vite": "^5.3.4",
    "vite-plugin-checker": "^0.6.4",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-pwa": "^0.19.8",
    "vitest": "^2.0.4",
    "@vitest/ui": "^2.0.4",
    "@vitest/coverage-v8": "^2.0.4",
    "jsdom": "^24.1.1",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/user-event": "^14.5.2",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.39",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.7",
    "cross-env": "^7.0.3",
    "wait-on": "^7.2.0",
    "playwright": "^1.45.3",
    "@playwright/test": "^1.45.3",
    "playwright-expect": "^0.1.5",
    "start-server-and-test": "^2.0.3",
    "benchmark": "^2.1.4",
        "webpack-bundle-analyzer": "^4.10.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "vitepress": "^1.3.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.5",
    "jest-environment-node": "^29.7.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}